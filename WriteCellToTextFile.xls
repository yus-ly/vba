Sub WriteCellToTextFile()
    ' 変数の宣言
    Dim cellValue As String
    Dim fileName As String
    Dim filePath As String
    Dim fileNum As Integer
　　Dim additionalText As String
    
    ' 特定のセルのデータを取得 (例: A1セル)
    cellValue = ThisWorkbook.Sheets("Sheet1").Range("A1").Value

    ' ファイル名を特定のセルから取得 (例: B1セル)
    fileName = ThisWorkbook.Sheets("Sheet1").Range("B1").Value

    ' ファイル名に拡張子を追加（例: .txt）
    fileName = "seed_reserve_" & fileName & ".txt"

    ' テキストファイルのパスを指定 (例: デスクトップに保存)
    filePath = Environ("USERPROFILE") & "\Documents\" & fileName
    
    ' ファイル番号を取得
    fileNum = FreeFile
    
    ' テキストファイルを開く（書き込み用）
    Open filePath For Output As #fileNum

　　' 他の文字列を追加して書き込む
    additionalText = "SEED_FOLDER " & cellValue
    
    ' セルのデータを書き込む
    Print #fileNum, additionalText
    
    ' ファイルを閉じる
    Close #fileNum
    
    ' 完了メッセージ
    MsgBox "データを書き込みました：" & filePath
End Sub
